<div class="container center">
<h5>Friends Search</h5>

<ul>
  <% @users.each do |user| %>
      <li>
        <%= image_tag user.avatar.url(:thumb), :class=>"circle" %>
        <br>
        <%= user.username %>
        <%= form_for Invitation.new, url: "/groups/#{@group.id}/invitations", method: "post" do |f| %>
        <%= f.hidden_field :sender_id, :value => current_user.id %>
         <%= f.hidden_field :recipient_id, :value => user.id %>
        <%= f.submit "Send Invite",:class => "waves-effect btn" %>
        <br>
      </li>
      <br>
      <% end  %>
  <% end %>
</ul>

</div>

