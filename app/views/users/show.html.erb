<div class="container center">
  <h5 class="center"> Hey <%= @user.first_name %>! </h5>
<p>POINTS: <%= current_user.points %></p>
<% if @groups.length > 0 %>
<div class="card-panel orange darken-4 center">
  <h5>Rafts you're a ridin'</h5>
  <ul>
  <% @groups.each do |group| %>
    <p><%= link_to group.name, group_path(group), :class =>"waves-effect blue darken-4 btn" %></p>
  <% end  %>
<% else %>
  <h6 class="center">You have no Rafts yet...Come on!!!</h6>
<% end %>
</div>
            <i class="fa fa-life-ring" aria-hidden="true"></i>
<div class="card-panel orange darken-4 center">
</ul>
<% if current_user.invitations.length > 0 %>
  <p>Check Out Your Invites!</p>

  <ul>
    <% current_user.invitations.each do |invitation| %>

      <li>
        <%=link_to Group.find_by(id: invitation.group_id).name, group_path(invitation.group_id)  %>
      </li>

    <% end  %>
  </ul>
<% else %>
    <h5>You have no invites...shucks</h5>
<% end %>
</div>
            <i class="fa fa-life-ring" aria-hidden="true"></i>

 <div class="card-panel orange darken-4 left">
  <%= render partial: '/groups/new' %>
</div>

</div>
