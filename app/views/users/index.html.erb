<h2>Friends Search</h2>
<ul>
  <% @users.each do |user| %>
      <li><a href="/users/<%= user.id %>"><%= user.username %></a>
        <%= form_for :user, url: "/users/#{user.id}/memberships", method: "post" do |f| %>
        <%= f.collection_select :group_id, current_user.groups, :id, :name %>
        <%= f.submit "Send Invite" %>
      </li>
      <% end  %>
  <% end %>
</ul>

